@using System.Xml.Linq


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>Year</td>
            <td>Title</td>
            <td>Authors</td>
        </tr>
    </thead>
    @{
        foreach (XElement project in Model.Elements("project"))
        {
            <tr>
                <td>@project.Attribute("id").Value</td>
                <td>@project.Attribute("year").Value</td>
                <td>@project.Element("title").Value</td>
                <td>
                    <dl>
                        @{
                            foreach (XElement autor in project.Element("authors").Elements("author"))
                            {
                                <dd>@autor.Value</dd>
                            }
                        }
                    </dl>
                </td>
            </tr>
        }
    }
</table>