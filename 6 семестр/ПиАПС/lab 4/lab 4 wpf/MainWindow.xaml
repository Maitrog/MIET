<Window x:Class="lab_4_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_4_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" x:Name="window">

    <Border x:Name="myBorder" BorderBrush="Purple" BorderThickness="2"
            CornerRadius="5" Width="150" Height="150"
            MouseLeftButtonDown="myBorder_MouseLeftButtonDown"
            MouseLeftButtonUp="myBorder_MouseLeftButtonUp"
            MouseRightButtonDown="myBorder_MouseRightButtonDown"
            MouseRightButtonUp="myBorder_MouseRightButtonUp"
            MouseMove="myBorder_MouseMove">
        <Border.Background>
            <ImageBrush/>
        </Border.Background>
    </Border>
</Window>
